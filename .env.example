# VibeScape Configuration
# Copy this file to .env and fill in your values

# Flask settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# OpenAI API settings
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Image generation settings
IMAGE_MODEL=dall-e-3
IMAGE_SIZE=1024x1024
IMAGE_QUALITY=standard

# Slideshow settings
SLIDESHOW_INTERVAL=60  # seconds between image transitions
GENERATION_INTERVAL=300  # seconds between generating new images (5 minutes)
MAX_CACHED_IMAGES=20  # maximum number of images to keep in cache

# Cache directory
CACHE_DIR=static/generated
